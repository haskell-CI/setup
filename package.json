{
  "name": "setup-haskell",
  "version": "1.0.0",
  "private": true,
  "description": "setup haskell action",
  "main": "src/setup-haskell.ts",
  "scripts": {
    "type-check": "tsc --noEmit",
    "format": "prettier --write **/*.{ts,json}",
    "format-check": "prettier --check **/*.{ts,json}",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run type-check && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/setup-haskell.git"
  },
  "keywords": [
    "actions",
    "haskell",
    "ghc",
    "cabal",
    "setup"
  ],
  "author": "GitHub",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.3",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.3.3",
    "js-yaml": "^3.13.1"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/js-yaml": "^3.12.2",
    "@types/node": "^13.9.1",
    "@typescript-eslint/parser": "^2.24.0",
    "@zeit/ncc": "^0.21.1",
    "eslint": "^6.8.0",
    "eslint-plugin-github": "^3.4.1",
    "eslint-plugin-jest": "^23.8.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-circus": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run all && git add dist"
    }
  }
}
